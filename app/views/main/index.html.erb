<div class="center-class">
    <h1> Welcome to the DCCinema </h1>
    <% unless @movies.empty? %>
        <h4> Select a day to see available movies </h4>
        <form action="/day" method="get">
            <select name="day" id="day">
                <% @days.each do |day| %>
                    <option value=<%= day %>><%= day %></option>
                <% end %>
            </select>
            <input type="submit" value="See Movies">
        </form>
    <% end %>
    <% if @movies.empty? %>
        Currently there's no movies in DCCinema, please come back later
    <% end %>

</div>
